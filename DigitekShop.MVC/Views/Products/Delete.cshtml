@model DigitekShop.Application.DTOs.Product.ProductDto

@{
    ViewData["Title"] = "حذف محصول";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>آیا از حذف این محصول اطمینان دارید؟</h4>
                    </div>
                    
                    <dl class="row">
                        <dt class="col-sm-3">نام محصول:</dt>
                        <dd class="col-sm-9">@Model.Name</dd>
                        
                        <dt class="col-sm-3">توضیحات:</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                        
                        <dt class="col-sm-3">قیمت:</dt>
                        <dd class="col-sm-9">@Model.Price.ToString("N0") تومان</dd>
                        
                        <dt class="col-sm-3">موجودی:</dt>
                        <dd class="col-sm-9">@Model.StockQuantity</dd>
                        
                        <dt class="col-sm-3">کد محصول:</dt>
                        <dd class="col-sm-9">@Model.SKU</dd>
                        
                        <dt class="col-sm-3">وضعیت:</dt>
                        <dd class="col-sm-9">@Model.Status</dd>
                        
                        <dt class="col-sm-3">دسته‌بندی:</dt>
                        <dd class="col-sm-9">@Model.CategoryName</dd>
                        
                        @if (!string.IsNullOrEmpty(Model.BrandName))
                        {
                            <dt class="col-sm-3">برند:</dt>
                            <dd class="col-sm-9">@Model.BrandName</dd>
                        }
                    </dl>
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">حذف محصول</button>
                            <a asp-action="Index" class="btn btn-secondary">بازگشت به لیست</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 