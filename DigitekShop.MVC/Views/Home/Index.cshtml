@{
    ViewData["Title"] = "دیجی‌تک شاپ - فروشگاه آنلاین";
    var featuredProducts = ViewBag.FeaturedProducts as List<DigitekShop.Application.DTOs.Product.ProductDto> ?? new List<DigitekShop.Application.DTOs.Product.ProductDto>();
}

<div class="container mt-4">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card bg-primary text-white">
                <div class="card-body text-center py-5">
                    <h1 class="display-4">به دیجی‌تک شاپ خوش آمدید</h1>
                    <p class="lead">بهترین محصولات دیجیتال با بهترین قیمت</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-light btn-lg">
                        <i class="fas fa-shopping-bag"></i> مشاهده محصولات
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Featured Products -->
    @if (featuredProducts.Any())
    {
        <div class="row mb-5">
            <div class="col-12">
                <h2 class="text-center mb-4">محصولات ویژه</h2>
                <div class="row">
                    @foreach (var product in featuredProducts)
                    {
                        <div class="col-md-4 col-lg-2 mb-4">
                            <div class="card h-100 shadow-sm">
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 150px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 150px;">
                                        <i class="fas fa-image text-muted"></i>
                                    </div>
                                }
                                
                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-title">@product.Name</h6>
                                    <p class="text-primary fw-bold mb-2">@product.Price.ToString("N0") تومان</p>
                                    
                                    <div class="mt-auto">
                                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary btn-sm w-100">
                                            مشاهده
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                
                <div class="text-center mt-4">
                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary">
                        مشاهده همه محصولات
                    </a>
                </div>
            </div>
        </div>
    }

    <!-- Quick Links -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-4">دسترسی سریع</h2>
            <div class="row">
                <div class="col-md-3 mb-3">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="fas fa-mobile-alt text-primary" style="font-size: 2rem;"></i>
                            <h5 class="card-title mt-3">گوشی موبایل</h5>
                            <p class="card-text">بهترین گوشی‌های هوشمند</p>
                            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary">مشاهده</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="fas fa-laptop text-success" style="font-size: 2rem;"></i>
                            <h5 class="card-title mt-3">لپ تاپ</h5>
                            <p class="card-text">لپ تاپ‌های قدرتمند</p>
                            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-success">مشاهده</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="fas fa-headphones text-info" style="font-size: 2rem;"></i>
                            <h5 class="card-title mt-3">لوازم جانبی</h5>
                            <p class="card-text">بهترین لوازم جانبی</p>
                            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-info">مشاهده</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="fas fa-tablet-alt text-warning" style="font-size: 2rem;"></i>
                            <h5 class="card-title mt-3">تبلت</h5>
                            <p class="card-text">تبلت‌های مدرن</p>
                            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-warning">مشاهده</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Features -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-4">چرا دیجی‌تک شاپ؟</h2>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="text-center">
                        <i class="fas fa-shipping-fast text-primary" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">ارسال سریع</h5>
                        <p>ارسال رایگان برای خریدهای بالای 500 هزار تومان</p>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="text-center">
                        <i class="fas fa-shield-alt text-success" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">ضمانت اصالت</h5>
                        <p>تمام محصولات با ضمانت اصالت و گارانتی معتبر</p>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="text-center">
                        <i class="fas fa-headset text-info" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">پشتیبانی 24/7</h5>
                        <p>پشتیبانی شبانه‌روزی در تمام روزهای هفته</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
