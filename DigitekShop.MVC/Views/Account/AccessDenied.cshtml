@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">Access Denied</h4>
                </div>
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                    <h5 class="mt-3">You don't have permission to access this resource.</h5>
                    <p class="text-muted">Please contact your administrator if you believe this is an error.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Go to Home</a>
                </div>
            </div>
        </div>
    </div>
</div> 